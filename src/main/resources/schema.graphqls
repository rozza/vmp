scalar DateTime
scalar Decimal128

type Query {
  books: [Book]
  bookById(id: ID): Book
  booksByPrice(lessThan: Decimal128) : [Book]
  createBook(book: BookInput): ID
}

type Book {
  id: ID
  name: String
  publicationDate: DateTime
  price: Decimal128
  pageCount: Int
  authors: [Author]
}

type Author {
  id: ID
  firstName: String
  lastName: String
}

input BookInput {
  name: String
  publicationDate: DateTime
  price: Decimal128
  pageCount: Int
}
